{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es2019"],
    "target": "es2019",
    "isolatedModules": false,
    "noEmit": false,
    "moduleResolution": "node",
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": ["server.ts"]
}
